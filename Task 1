books = {
    "The Road": "Cormac McCarthy",
    "Beloved": "Toni Morrison",
    "Life of Pi": "Yann Martel",
    "The Kite Runner": "Khaled Hosseini",
    "Never Let Me Go": "Kazuo Ishiguro"
}
